target C {
    build: "../scripts/build_nrf_unix.sh",
    threading: false,
}

main reactor {

    logical action a;
    state cnt:int(0)

    reaction(startup) -> a {=
        lf_schedule(a, MSEC(10));
    =}

    reaction(a) {=
        self->cnt++;
    =}

    reaction(shutdown) {=
        if (self->cnt != 1) {
            lf_print_error_and_exit("Failed");
        }
    =}
}
